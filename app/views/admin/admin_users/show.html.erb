<div class="container text-center" style="margin: 10px 0 10px 0">
  <div class="row">
    <div class="col">
      <% if can? :read, AdminUser %>
        <%= link_to t('.link.back'), admin_admin_users_path, class:'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col">
      <% if can? :edit, AdminUser %>
        <%= link_to t('.link.edit'), edit_admin_admin_user_path(@admin_user), class:'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col">
      <% if can? :destroy, AdminUser %>
        <%= button_to t('.link.delete'), admin_admin_user_path(@admin_user), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
<div class="card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @admin_user.email %></li>
    <li class="list-group-item"> <%= @admin_user.role %></li>
  </ul>
</div>
