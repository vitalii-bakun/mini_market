<div class="container text-center" style="margin: 10px 0 10px 0">
  <div class="row">
    <div class="col">
      <% if can? :read, AdminUser %>
        <%= link_to t('.link.show'), admin_admin_user_path(@admin_user), class:'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col">
      <% if can? :edit, AdminUser %>
        <%= link_to t('.link.back'), admin_admin_users_path, class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<h1><%= t('.title') %></h1>
<%= render "form", admin_user: @admin_user, url: admin_admin_user_path(@admin_user) %>
