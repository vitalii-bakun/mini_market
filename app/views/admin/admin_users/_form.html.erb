<%= form_with(model: admin_user, url: url) do |form| %>
  <% if admin_user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_user.errors.count, "error") %> prohibited this admin_user from being saved:</h2>
      <ul>
        <% admin_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label t('admin.admin_users.form.email'), class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label t('admin.admin_users.form.password'), style: "display: block", class: "form-label" %>
    <%= form.text_field :password, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label t('admin.admin_users.form.password_confirmation'), style: "display: block", class: "form-label" %>
    <%= form.text_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label t('admin.admin_users.form.role'), class: "form-label" %>
    <%= form.select :role, roles_from_admin_users, {}, class: "form-select" %>
  </div>
  <%= form.submit t("admin.admin_users.form.submit.#{params[:action]}"), class:'btn btn-primary' %>
<% end %>
