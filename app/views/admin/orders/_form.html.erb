<%= form_with(model: order, url: url) do |form| %>
  <% if order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label t('admin.orders.form.product'), class: "form-label" %>
    <%= form.select :product_id, Product.all.map {|product| [product.title, product.id]}, {}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label t('admin.orders.form.current_price'), class: "form-label" %>
    <%= form.text_field :current_price, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label t('admin.orders.form.quantity'), class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>
  <%= form.submit t('admin.orders.form.submit'), class:'btn btn-primary' %>
<% end %>
